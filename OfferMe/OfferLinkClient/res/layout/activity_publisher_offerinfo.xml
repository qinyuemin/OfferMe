<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6" >

    <FrameLayout
        android:id="@+id/publisher_offer_info_up"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/publisher_offer_info_down" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/publisher_offer_info_name_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/publisher_offer_info_name"
                    android:textColor="#808080"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#e3e3e3" />

                    <LinearLayout
                        android:id="@+id/publisher_offer_info_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp" >

                            <ImageView
                                android:id="@+id/publisher_offer_info_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dafaultuser01" />

                            <ImageView
                                android:id="@+id/publisher_offer_info_profile_round"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/borderprofile" />
                        </FrameLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" >

                                    <TextView
                                        android:id="@+id/publisher_offer_info_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#808080"
                                        android:textSize="20sp" />

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical" >

                                        <TextView
                                            android:id="@+id/publisher_offer_info_person_entreprise"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:textColor="#808080"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/publisher_offer_info_person_post"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:textColor="#808080"
                                            android:textSize="14sp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" >

                                    <TextView
                                        android:id="@+id/publisher_offer_info_mail_string"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text="@string/publisher_offer_info_mail"
                                        android:textColor="#808080"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/publisher_offer_info_mail"
                                        style="@style/DefaultTextColor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#808080"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" >

                                    <TextView
                                        android:id="@+id/publisher_offer_info_string"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="left|center_vertical"
                                        android:text="@string/publisher_offer_info_date"
                                        android:textColor="#808080"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/publisher_offer_info_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#808080"
                                        android:textSize="15sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/publisher_offer_info_publisher"
                                android:layout_width="15dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/datailarrow" />

                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#e3e3e3" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/TextView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:text="@string/publisher_post_demand"
                        android:textColor="#808080"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/publisher_offer_info_favorite"
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/cbxcollect"
                        android:button="@null"
                        android:gravity="center" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#e3e3e3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp" >

                            <TextView
                                android:id="@+id/publisher_offer_info_education_string"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="@string/publisher_offer_info_education"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/publisher_offer_info_education"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="15dp"
                                android:gravity="right|center_vertical"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/TextView09"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#e3e3e3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp" >

                            <TextView
                                android:id="@+id/publisher_offer_info_workyear_string"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="@string/publisher_offer_info_workyear"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp" >

                                <TextView
                                    android:id="@+id/publisher_offer_info_workyear"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="right|center_vertical"
                                    android:textColor="#808080"
                                    android:textSize="16sp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#e3e3e3" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/publisher_post_info"
                    android:textColor="#808080"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView07"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#e3e3e3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp" >

                            <TextView
                                android:id="@+id/publisher_offer_info_post_string"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="@string/publisher_post"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/publisher_offer_info_post"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="15dp"
                                android:gravity="right|center_vertical"
                                android:textColor="#808080"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/TextView13"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#e3e3e3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp" >

                            <TextView
                                android:id="@+id/publisher_offer_info_entrerprise_string"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="@string/publisher_enterprise"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/publisher_offer_info_entrerprise"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="15dp"
                                android:gravity="right|center_vertical"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/TextView12"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#e3e3e3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp" >

                            <TextView
                                android:id="@+id/publisher_offer_info_city_string"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="@string/publisher_city"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/publisher_offer_info_city"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="15dp"
                                android:gravity="right|center_vertical"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/TextView10"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#e3e3e3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp" >

                            <TextView
                                android:id="@+id/publisher_offer_info_domain_string"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="@string/publisher_domain"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/publisher_offer_info_domain"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="15dp"
                                android:gravity="right|center_vertical"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/TextView14"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#e3e3e3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp" >

                            <TextView
                                android:id="@+id/publisher_offer_info_salary_string"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="@string/publisher_salary"
                                android:textColor="#808080"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/publisher_offer_info_salary"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="15dp"
                                android:gravity="right|center_vertical"
                                android:textColor="#808080"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView08"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#e3e3e3" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/publisher_post_description"
                    android:textColor="#808080"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView17"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#e3e3e3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="#FFFFFF" >

                        <TextView
                            android:id="@+id/publisher_offer_info_description"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:minHeight="50dp"
                            android:textColor="#808080"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView16"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#e3e3e3" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:id="@id/publisher_offer_info_down"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#f6f6f6" >

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/publisher_offer_info_send_cv_sent"
                        android:layout_width="96dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sendcvbtnwhite"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/publisher_offer_info_send_cv"
                        android:layout_width="96dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="sendCV"
                        android:src="@drawable/sendcvbtnblue"
                        android:visibility="visible" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/publisher_offer_info_phone_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <!-- ImageView
                        android:id="@+id/publisher_offer_info_phone_uncontactable"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/callingbtnunclickable" /-->

                    <ImageView
                        android:id="@+id/publisher_offer_info_phone"
                        android:layout_width="96dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|center"
                        android:layout_weight="1"
                        android:onClick="callPublisher"
                        android:src="@drawable/callingbtn" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/publisher_offer_info_sendmail"
                        android:layout_width="96dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="sendMailFromOffer"
                        android:src="@drawable/letterbluebtn" />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>